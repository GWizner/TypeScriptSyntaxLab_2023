@model Products[]
<p>This is the product list page.  There are @Model.Length products.</p>
<table>
    <tr>
        <th style="color:chocolate">Name</th>
        <th style="color:chocolate">Description</th>
        <th style="color:chocolate">Price</th>
    </tr>
    @{
        foreach (var currProduct in @Model)
        {
            <tr>
                <td><a href="ProductDetails?id=@currProduct.ID">@currProduct.Name</a></td>
                <td>@currProduct.Description</td>
                <td>$@currProduct.Price</td>
            </tr>
        }
    }
</table>
<br/>
<br/>
<a href="CreateNewProduct">Create a New Product</a>
